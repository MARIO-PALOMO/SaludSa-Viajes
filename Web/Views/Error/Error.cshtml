
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 page-500 text-align-center">
        <i class="fa fa-times-circle text-danger" style="font-size: 500%; margin-top: 30px;"></i>
        <div class="number font-red" style="font-size: 500%"> Error @ViewBag.StatusCode </div>
        <div class=" details">
            <h3>Oops! Algo salió mal.</h3>
            <p>
                @ViewBag.Mensaje
                <br>
            </p>
        </div>
    </div>
</div>