
@{
    ViewBag.Title = "Roles administrativos";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link href="~/AngularJS/lib/angular-datatables.bootstrap/datatables.bootstrap.min.css" rel="stylesheet" />
<link href="~/AngularJS/lib/jquery-chosen/chosen.min.css" rel="stylesheet" />
<link href="~/AngularJS/lib/jquery-chosen/chosen-sprite.png" rel="image_src" />

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")">Inicio</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewBag.Title</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->

<br />

<div ng-app="app_rol_administrativo" class="row" style="display: none" id="panel-listado-general-fade">
    <div ng-controller="RolAdministrativoIndex" class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-list font-dark"></i>
                    <span class="caption-subject bold uppercase"> @ViewBag.Title</span>
                </div>
                <div class="actions">
                    <a ng-click="Adicionar()" href="javascript:;" class="btn btn-circle blue btn-outline">Nuevo rol administrativo <i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="overflow-x: visible;">
                    <table datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs" class="table table-striped table-bordered table-hover order-column">
                        <thead>
                            <tr>
                                <th>Rol</th>
                                <th>Colaborador</th>
                                <th>Empresa</th>
                                <th>Ciudad</th>
                                <th style="max-width:170px">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="Rol in Roles">
                                <td><a ng-click="Detalle(Rol.Id)" href="javascript:;">{{ Rol.RolObj.Nombre }}</a></td>
                                <td>{{ Rol.ColaboradorObj.NombreCompleto }}</td>
                                <td>{{ Rol.EmpresaObj.Nombre }}</td>
                                <td>{{ Rol.CiudadObj.Nombre }}</td>
                                <td>
                                    <a ng-click="Editar(Rol.Id)" title="Editar" class="btn btn-circle yellow btn-outline btn-xs" style="margin-left:5px"><i class="fa fa-edit"></i> Editar</a>
                                    <a ng-click="Eliminar(Rol.Id)" title="Eliminar" class="btn btn-circle red btn-outline btn-xs" style="margin-left:5px"><i class="fa fa-trash-o"></i> Eliminar</a>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Rol</th>
                                <th>Colaborador</th>
                                <th>Empresa</th>
                                <th>Ciudad</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

@section Scripts {

    @*Eduardo: Datatables.*@
    <script src="~/AngularJS/lib/jquery-datatables/jquery.dataTables.js"></script>
    <script src="~/AngularJS/lib/angular-datatables/angular-datatables.js"></script>
    <script src="~/AngularJS/lib/angular-datatables.bootstrap/angular-datatables.bootstrap.min.js"></script>
    <script src="~/AngularJS/lib/jquery-datatables-columnfilter/dataTables.columnFilter.js"></script>
    <script src="~/AngularJS/lib/angular-datatables-columnfilter/angular-datatables.columnfilter.min.js"></script>

    @*Eduardo: Bootstrap.*@
    <script src="~/AngularJS/lib/angular-ui-bootstrap/ui-bootstrap-tpls-1.2.5.min.js"></script>

    @*Eduardo: Chosen.*@
    <script src="~/AngularJS/lib/jquery-chosen/chosen.jquery.min.js"></script>
    <script src="~/AngularJS/lib/angular-chosen/angular-chosen.min.js"></script>

    @*Eduardo: Archivos JS propios del módulo app_rol.*@
    <script src="~/AngularJS/app/RolAdministrativo/controllers/RolAdministrativoIndex.js"></script>
    <script src="~/AngularJS/app/RolAdministrativo/controllers/RolAdministrativoCreate.js"></script>
    <script src="~/AngularJS/app/RolAdministrativo/controllers/RolAdministrativoEdit.js"></script>
}